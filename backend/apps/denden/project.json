{
  "name": "denden",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "denden/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "target": "node",
        "compiler": "tsc",
        "outputPath": "dist/denden",
        "main": "denden/src/main.ts",
        "tsConfig": "denden/tsconfig.app.json",
        "assets": ["denden/src/assets"],
        "webpackConfig": "denden/webpack.config.js"
      },
      "configurations": {
        "development": {},
        "production": {}
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "denden:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "denden:build:development"
        },
        "production": {
          "buildTarget": "denden:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "denden/jest.config.ts"
      }
    }
  },
  "tags": ["scope:denden"]
}
